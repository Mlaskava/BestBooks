extends layout

block append stylesheets
    link(rel='stylesheet', href='/stylesheets/index.css')

block append scripts
    script(src='/scripts/queryParametersHelper.js')

block append content
    block basicLayout
        div#categories
            for category in categories
                a.category(id=category.category_id onclick="adjustQueryParameter(this)") #{category.name}
        div#search
            input#searchbar(value= name||"")
            button#searchbutton(onclick="adjustQueryParameter(this)") Szukaj
    block pageSpecific
        div.grid-container
            for product in products
                a.grid-item(href="products/" + product.product_id)
                    p.name #{product.name}
                    img(src="../images/" + product.img_name)
                    p.prize #{product.prize} Z≈Å