extends layout

block append stylesheets
    link(rel='stylesheet', href='/stylesheets/product.css')

block append scripts
    script(src='/scripts/labelsAndButtonsScripts.js')

block append body
    div#productFrame
        img(src="../images/" + product.img_name)
        div#productBasicInfo
            p #{product.name}
            p #{product.prize} ZÅ‚otych
            p Liczba sztuk:



            div
                button#left(class=product.product_id onclick="decreaseValue(this, false)") -
                input#input(class=product.product_id value=1)
                button#right(class=product.product_id onclick="increaseValue(this, false)") +
                p#productAmount z #{product.available_amount} sztuk
            button#addToCart(onclick="addToCart()") Dodaj do koszyka
        p#description #{product.description}